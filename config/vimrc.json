{
  "fileName": ".vimrc",
  "symlink": "<home>/.vimrc",
  "lineCommentCharacter": "\"",
  "configValues": [
    {
      "key": "set",
      "value": "nocompatible"
    },
    {
      "key": "set encoding",
      "value": "utf-8",
      "deliminator": "="
    },
    {
      "key": "set",
      "value": "termguicolors"
    },
    {
      "key": "set foldmethod",
      "value": "indent",
      "deliminator": "="
    },
    {
      "key": "set foldlevelstart",
      "value": "30",
      "deliminator": "="
    },
    {
      "key": "set mouse",
      "value": "a",
      "deliminator": "="
    },
    {
      "key": "color",
      "value": "catppuccin_mocha"
    },
    {
      "comment": "Syntax Highlighting",
      "key": "syntax",
      "value": "on"
    },
    {
      "comment": "Tab Options"
    },
    {
      "key": "set",
      "value": "autoindent"
    },
    {
      "key": "set",
      "value": "expandtab"
    },
    {
      "key": "set shiftwidth",
      "deliminator": "=",
      "value": "2"
    },
    {
      "key": "set tabstop",
      "deliminator": "=",
      "value": "2"
    },
    {
      "key": "set showtabline",
      "deliminator": "=",
      "value": "2"
    },
    {
      "key": "set",
      "value": "smarttab"
    },
    {
      "key": "set",
      "value": "hlsearch"
    },
    {
      "key": "set",
      "value": "number"
    },
    {
      "comment": "Mapping for FuzzyFinder (FZF)",
      "key": "map ;",
      "value": ":FZF<CR>"
    },
    {
      "comment": "Mapping for Reloading Vim config",
      "key": "map <Space>r",
      "value": ":source ~/.vimrc <CR>"
    },
    {
      "comment": "Mapping for Sexy Nerd Comments",
      "key": "map <space>/",
      "value": ":call nerdcommenter#Comment('x', 'toggle')<CR>"
    },
    {
      "comment": "Mapping for NERDTree Toggle",
      "key": "map <Space>t",
      "value": ":NERDTreeToggle<CR>"
    }
  ]
}
